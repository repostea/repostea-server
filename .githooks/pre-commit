#!/bin/bash

# Pre-commit hook for Laravel project
# Runs tests and quality checks before allowing commits
# Compatible with Linux, macOS, Windows (Git Bash), and WSL2

set -e

# Detect operating system for cross-platform compatibility
case "$OSTYPE" in
    msys*|cygwin*|win32*)
        OS_TYPE="windows"
        ;;
    darwin*)
        OS_TYPE="mac"
        ;;
    linux*)
        OS_TYPE="linux"
        ;;
    *)
        OS_TYPE="unknown"
        ;;
esac

echo "ðŸ” Running pre-commit checks..."

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Function to print colored output
print_status() {
    echo -e "${BLUE}[INFO]${NC} $1"
}

print_success() {
    echo -e "${GREEN}[SUCCESS]${NC} $1"
}

print_warning() {
    echo -e "${YELLOW}[WARNING]${NC} $1"
}

print_error() {
    echo -e "${RED}[ERROR]${NC} $1"
}

# Check if we're in a Laravel project
if [ ! -f "composer.json" ] || [ ! -f "artisan" ]; then
    print_error "Not in a Laravel project directory"
    exit 1
fi

# Check if composer is available (cross-platform)
COMPOSER_CMD="composer"
if ! command -v composer &> /dev/null; then
    if command -v composer.phar &> /dev/null; then
        COMPOSER_CMD="php composer.phar"
    elif [ -f "composer.phar" ]; then
        COMPOSER_CMD="php composer.phar"
    else
        print_error "Composer is not installed or not in PATH"
        print_warning "Install Composer: https://getcomposer.org/download/"
        exit 1
    fi
fi

# Only check staged PHP files
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.php$' || true)

if [ -z "$STAGED_FILES" ]; then
    print_warning "No PHP files staged for commit"
    exit 0
fi

print_status "Found staged PHP files: $(echo $STAGED_FILES | wc -w) files"

# 1. Run Laravel Pint (Code Style) - Cross-platform
print_status "Running Laravel Pint (code formatting)..."
PINT_CMD="vendor/bin/pint"
if [ "$OS_TYPE" = "windows" ]; then
    PINT_CMD="vendor\\bin\\pint.bat"
fi

if ! $PINT_CMD --test; then
    print_error "Code style issues found!"
    print_warning "Run '$PINT_CMD' to fix formatting issues"
    exit 1
fi
print_success "Code formatting is correct"

# 2. Skip PHPStan for now (too strict for development)
print_warning "Skipping PHPStan analysis (run 'composer quality' manually for full analysis)"

# 3. Run Tests (only for staged files that might affect tests)
print_status "Running Pest tests..."

# Check if any staged files are in critical directories
CRITICAL_FILES=$(echo "$STAGED_FILES" | grep -E "(app/|tests/)" || true)

if [ -n "$CRITICAL_FILES" ]; then
    # Run only MediaService tests (fastest and most stable) - Cross-platform
    PEST_CMD="vendor/bin/pest"
    if [ "$OS_TYPE" = "windows" ]; then
        PEST_CMD="vendor\\bin\\pest.bat"
    fi
    
    if ! $PEST_CMD tests/Unit/Services/MediaServiceTest.php --no-progress; then
        print_error "Core tests are failing!"
        print_warning "Fix the failing tests before committing"
        exit 1
    fi
    print_success "Core tests passed"
else
    print_warning "No critical files changed, skipping tests"
fi

# 4. Check for common issues
print_status "Checking for common issues..."

# Check for debugging statements (use word boundaries to avoid false positives)
DEBUG_FILES=$(echo "$STAGED_FILES" | xargs grep -lE "\bdd\(|\bdump\(|\bvar_dump\(|\bprint_r\(" 2>/dev/null || true)
if [ -n "$DEBUG_FILES" ]; then
    print_warning "Debug statements found in:"
    echo "$DEBUG_FILES"
    print_warning "Consider removing debug statements before committing"
fi

# Check for TODO comments in staged files
TODO_FILES=$(echo "$STAGED_FILES" | xargs grep -l "TODO\|FIXME\|XXX" 2>/dev/null || true)
if [ -n "$TODO_FILES" ]; then
    print_warning "TODO/FIXME comments found - make sure they're intentional"
fi

print_success "All pre-commit checks passed! âœ¨"
print_status "Proceeding with commit..."

exit 0